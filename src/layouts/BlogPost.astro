---
import BaseLayout from './BaseLayout.astro';

const { title, date, tag } = Astro.props;
const formatted = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---

<BaseLayout title={`${title} — Johnson Jao`}>
  <article style="max-width: 720px; margin: 0 auto; padding: 140px 24px 80px;">
    <!-- Back link -->
    <a href="/blog" style="
      font-size: 13px; color: #999; text-decoration: none;
      letter-spacing: 2px; text-transform: uppercase; font-weight: 500;
    ">← Back to Blog</a>

    <!-- Header -->
    <header style="margin-top: 40px; margin-bottom: 48px;">
      <div style="display: flex; gap: 12px; align-items: center; margin-bottom: 16px;">
        <span style="
          font-size: 11px; font-weight: 700; letter-spacing: 2px;
          text-transform: uppercase; color: #f5f5f0; background: #111;
          padding: 3px 10px; border-radius: 999px;
        ">{tag}</span>
        <span style="font-size: 13px; color: #999;">{formatted}</span>
      </div>
      <h1 style="
        font-size: clamp(32px, 5vw, 52px); font-weight: 800;
        line-height: 1.15; letter-spacing: -1.5px; color: #111;
      ">{title}</h1>
    </header>

    <!-- Article content — Markdown renders here -->
    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    font-size: 17px;
    line-height: 1.85;
    color: #444;
  }
  .prose h2 {
    font-size: 28px;
    font-weight: 700;
    color: #111;
    margin-top: 48px;
    margin-bottom: 16px;
    letter-spacing: -0.5px;
  }
  .prose h3 {
    font-size: 22px;
    font-weight: 600;
    color: #111;
    margin-top: 36px;
    margin-bottom: 12px;
  }
  .prose p {
    margin-bottom: 20px;
  }
  .prose code {
    font-size: 15px;
    background: #f0f0ea;
    padding: 2px 6px;
    border-radius: 4px;
  }
  .prose pre {
    background: #0a0a0a;
    color: #e5e5e0;
    padding: 24px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
    font-size: 14px;
    line-height: 1.6;
  }
  .prose pre code {
    background: none;
    padding: 0;
  }
  .prose a {
    color: #111;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  .prose blockquote {
    border-left: 3px solid #ddd;
    padding-left: 20px;
    color: #777;
    font-style: italic;
    margin: 24px 0;
  }
  .prose img {
    max-width: 100%;
    border-radius: 8px;
    margin: 24px 0;
  }
  .prose ul, .prose ol {
    padding-left: 24px;
    margin-bottom: 20px;
  }
  .prose li {
    margin-bottom: 8px;
  }
</style>